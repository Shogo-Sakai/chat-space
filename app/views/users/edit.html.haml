#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", "/users/sign_out", method: :delete, class: 'btn'
      = link_to "トップページに戻る", root_path, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(:user, as: :user, url: "/users/#{current_user.id}", method: :patch) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true, placeholder: current_user.name
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email, placeholder: current_user.email
        .actions
          = f.submit "Update Account", class: 'btn'
