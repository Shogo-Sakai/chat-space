.side_bar
  .side_bar__header
    .side_bar__header__user-name
      =current_user.name
    .side_bar__header__menu
      .side_bar__header__menu__new-group
      =link_to new_group_path, class:"fa fa-edit icon" do
        %span<>
      .side_bar__header__menu__edit
      =link_to edit_user_path(current_user), class: "fa fa-cog icon" do
        %span<>
  .groups
    - current_user.groups.each do |group|
      .group
        =link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__latest-message
            test message